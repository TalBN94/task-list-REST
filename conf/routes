# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
#GET     /welcome/:name                      controllers.HomeController.welcome(name: String)

# Persons controller
GET     /people                             controllers.PersonsController.getAll
GET     /people/:id                         controllers.PersonsController.getPerson(id: String)
GET     /people/:id/tasks                   controllers.PersonsController.getPersonTasks(id: String, status: String ?="Active")
POST    /people                             controllers.PersonsController.createPerson(request: Request)
POST    /people/:id/tasks                   controllers.PersonsController.addTask(id: String, request: Request)
PATCH   /people/:id                         controllers.PersonsController.updatePerson(id: String, request: Request)
DELETE  /people/:id                         controllers.PersonsController.deletePerson(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
